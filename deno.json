{
  "lint": {
    "include": [
      "src"
    ],
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-implicit-any",
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "semiColons": true,
    "singleQuote": true,
    "indentWidth": 2,
    "lineWidth": 100
  },
  "imports": {
    "oak": "https://deno.land/x/oak@v12.6.1/mod.ts",
    "test/": "https://deno.land/std@0.210.0/testing/",
    "~/": "./src/"
  }
}
